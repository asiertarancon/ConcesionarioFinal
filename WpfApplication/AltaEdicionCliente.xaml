        <TextBox x:Name="txtTelefono" HorizontalAlignment="Left" Height="23" Margin="125,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="chkVip" Content="VIP" Margin="125,172,0,0" VerticalAlignment="Top" Width="43" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>

        <Button x:Name="btnGuardar" Content="Guardar" Click="btnGuardar_Click" Margin="54,228,15.064,16"/>
